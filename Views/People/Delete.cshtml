@model dietiary.Models.Person

@{
    ViewData["Title"] = "Twoje dane";
}

<h1>Usuń dane</h1>

<div>
    <h4>Twoje dane</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Wzrost:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt class="col-sm-2">
            Waga:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            Wiek:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            Płeć biologiczna:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
    </dl>
    <h4>Czy na pewno usunąć?</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
